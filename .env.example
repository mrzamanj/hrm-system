 
# General Environment
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600  # 1 hour

# User Service (Node.js)
USER_SERVICE_DB_HOST=localhost
USER_SERVICE_DB_PORT=5432
USER_SERVICE_DB_NAME=hrm_user_db
USER_SERVICE_DB_USER=your_db_user
USER_SERVICE_DB_PASSWORD=your_db_password

# Payroll Service (Go)
PAYROLL_SERVICE_DB_HOST=localhost
PAYROLL_SERVICE_DB_PORT=5432
PAYROLL_SERVICE_DB_NAME=hrm_payroll_db
PAYROLL_SERVICE_DB_USER=your_db_user
PAYROLL_SERVICE_DB_PASSWORD=your_db_password

# Leave Service (Python)
LEAVE_SERVICE_DB_HOST=localhost
LEAVE_SERVICE_DB_PORT=5432
LEAVE_SERVICE_DB_NAME=hrm_leave_db
LEAVE_SERVICE_DB_USER=your_db_user
LEAVE_SERVICE_DB_PASSWORD=your_db_password

# Kafka
KAFKA_BROKER=localhost:9092
KAFKA_CONSUMER_GROUP=hrm-consumer-group
KAFKA_TOPIC_USER=hrm-user-topic
KAFKA_TOPIC_PAYROLL=hrm-payroll-topic
KAFKA_TOPIC_LEAVE=hrm-leave-topic

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Third-party API keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Other service configurations
EMAIL_FROM=no-reply@yourdomain.com
SMS_FROM=+1234567890

# Global configurations
BASE_URL=http://localhost:3000
